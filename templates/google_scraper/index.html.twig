{% extends 'base.html.twig' %}
{% block title %}Google Scrapper{% endblock %}
{% block body %}
<div class="container">
    <div class="mt-5">
        <h5>Results Count: {{ results['results']['result_count'] }}</h5>
        <h5>Search Engine: {{ results['results']['search_engine'] }}</h5>
        <h5>Search URL: {{ results['results']['search_url'] }}</h5>
    </div>
    <div class="mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Title</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                {% for result in results['results']['organic_results'] %}
                    <tr>
                        <td>{{ result.position }}</td>
                        <td>{{ result.title }}</td>
                        <td>
                            <a href="{{ result.link }}">
                                {{ result.link }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
